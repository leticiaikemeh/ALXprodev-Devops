#!/bin/bash

# Extract name
name=$(jq -r '.name' data.json)

# Extract height (in decimeters), convert to meters
height_dm=$(jq -r '.height' data.json)
height_m=$(echo "$height_dm / 10" | bc -l | awk '{printf "%.1f", $0}')

# Extract weight (in hectograms), convert to kg
weight_hg=$(jq -r '.weight' data.json)
weight_kg=$(echo "$weight_hg / 10" | bc -l | awk '{printf "%.1f", $0}')

# Extract type (first type if multiple)
type=$(jq -r '.types[0].type.name' data.json)

# Format and print the output
echo "$name is of type $type, weighs $weight_kg kg, and is $height_m m tall."
