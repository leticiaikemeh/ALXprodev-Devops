#!/bin/bash

# List of Pokémon
pokemon_list=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
API_URL="https://pokeapi.co/api/v2/pokemon"

# Directory to store JSON files
mkdir -p pokemon_data

for pname in "${pokemon_list[@]}"; do
    echo "Fetching data for $pname..."
    # Fetch data and save to respective file
    if curl -s "${API_URL}/${pname}" -o "pokemon_data/${pname}.json"; then
        echo "Saved data to pokemon_data/${pname}.json ✅"
    else
        echo "Failed to fetch data for $pname"
    fi
    # Delay to handle rate limiting
    sleep 1
done
